<h1>Update <%= @word.name %></h1>

<form action="/words/<%= @word.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="word_name">Edit Word</label>
  <input id="word_name" name="word_name" type="text">

  <button type="submit" class="btn btn-primary">Update</button>
</form>

<p><a href="/words/<%= @word.id %>">Return to Word</a></p>